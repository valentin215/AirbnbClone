<h1>My bookings</h1>

<% @bookings.each do |booking| %>
  <% simple_form_for [@booking]  %>
  <%= booking.id %>
  <%= booking.start_date%>
  <%= booking.end_date%>
  <%= booking.total_price%>
  <%= booking.status %>
  <%= link_to 'delete', booking, :method => :delete, data: {:confirm => "You sure?" } %>
  <%= f.button "Accept", name: "status", value: "accept" %>
  <%= f.button "Decline", name: "status", value: "decline" %>
<% end %>

