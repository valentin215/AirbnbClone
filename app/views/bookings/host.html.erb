<h1>Boookings host</h1>


<div id="bookings">
  <ul>
    <% @bookings.each do |booking| %>
      <li data-booking-id="<%= booking.id %>">
        <%= booking.id %>
        <%= booking.start_date%>
        <%= booking.end_date%>
        <%= booking.total_price%>
        <%= booking.status %>
        <%= link_to 'delete', booking, :method => :delete, data: {:confirm => "You sure?" }, remote: true  %>

        <% unless booking.status == 'accepted' %>

          <%= simple_form_for booking do |f| %>
            <%= f.input :status, input_html: { value: 'accepted' }, as: :hidden  %>
            <%= f.submit "accepted", method: :patch, remote: true %>
          <% end %>

          <%= simple_form_for booking do |f| %>
            <%= f.input :status, input_html: { value: 'rejected' }, as: :hidden  %>
            <%= f.submit "reject", method: :patch, remote: true %>
          <% end %>

        <% end %>
      </li>
    <% end %>
  </ul>
</div>

