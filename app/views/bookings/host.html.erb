<h1>Boookings host</h1>



<div class="container">
  <div class="row">
       <% @bookings.each do |booking| %>
        <div class="col-sm">
        <div class="card-product">
          <%= cl_image_tag booking.flat.picture, height: 200, width: 200, crop: :fill %>
            <div class="card-product-infos">
              <h3>Reservation number: <%= booking.id %></h3>
              <p>Status: <%= booking.status %></p>
              <p>Starting date: <%= booking.start_date%></p>
              <p>Ending date: <%= booking.end_date%></p>
              <p><strong>Total cost: <%= booking.total_price%> â‚¬</strong></p>

              <%= link_to 'delete', booking, :method => :delete, data: {:confirm => "You sure?" } %>
              <% unless booking.status == 'accepted' %>

                <%= simple_form_for booking do |f| %>
                  <%= f.input :status, input_html: { value: 'accepted' }, as: :hidden  %>
                  <%= f.submit "accepted", method: :patch %>
                <% end %>

                <%= simple_form_for booking do |f| %>
                  <%= f.input :status, input_html: { value: 'rejected' }, as: :hidden  %>
                  <%= f.submit "reject", method: :patch %>
                <% end %>
              <% end %>
            </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
