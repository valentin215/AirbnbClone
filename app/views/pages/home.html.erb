<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'home_paradise.jpg' %>');">
  <div class="banner-inside">
    <div class="banner-content">
      <h1>Find your home</h1>
      <p id="home-description">Discover beautiful private rooms and flats adapated to your typical journey.</p>
      <form novalidate="novalidate" class="simple_form search" action="/flats" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
        <div class="search-form-control form-group">
          <p>WHERE</p>
          <input class="form-control string required" type="text" name="location" id="search_query"  placeholder="Everywhere"/>
          <div class='dates-form'>
            <div>
              <p>START DATE</p>
              <input class="form-control string required" style="width: 187px;" type="date" name="start_date" id="search_query" placeholder="Start date"/>
            </div>
            <div>
              <p>END DATE</p>
              <input class="form-control string required" style="width: 187px;" type="date" name="end_date" id="search_query" placeholder="End date"/>
            </div>
          </div>
            <input class="form-control string required" type="integer" name="capacity" id="search_query" placeholder="Number of people" />
            <a class="btn" href="/flats" style="color: white;">Search</a>
        </div>
      </form>
    </div>
  </div>
</div>
