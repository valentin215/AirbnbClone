    <div class="content">

      <div class="cards">
        <% @flats.each do |flat| %>
          <div class="card" style="background-image: url('<%= cl_image_path flat.picture %>')">
<%= link_to flat.title, flat_path(flat, start_date: params[:start_date], end_date: params[:end_date]) %>
<p>$<%= flat.price %>/night</p>
          </div>
        <% end %>
      </div>





  <div
    id="map"
    style="width: 50%;
    height: 100VH;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>



