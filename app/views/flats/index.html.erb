<div
  id="map"
  style="width: 100%;
  height: 450px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="cards">
  <% @flats.each do |flat| %>
    <div class="flat">
      <%= cl_image_tag flat.picture, height: 300, width: 400, crop: :fill %>
      <div class="flat-infos">
        <div>
          <h2><%= link_to flat.title, flat_path(flat, start_date: params[:start_date], end_date: params[:end_date]) %></h2>
          <p>$<%= flat.price %>/night</p>
        </div>
      </div>
      <% end %>
     <% end %>
  </div>
</div>

