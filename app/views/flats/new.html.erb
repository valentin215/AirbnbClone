<div class="container-show mx-auto" style="width: 400px">

  <%= simple_form_for [@flat] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :lat %>
    <%= f.input :long %>
    <%= f.input :capacity %>
    <%= f.input :price %>
    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>
    <%= f.button :submit %>

  <% end %>
</div>
