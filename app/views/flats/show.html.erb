
<%#= @flat.title %>
 <%#= cl_image_tag @flat.picture, height: 300, width: 400, crop: :fill %>
<%#= @flat.description%>
<div class="img-house">
  <%= cl_image_tag @flat.picture, crop: :fill %>
</div>

<div class="container-show">
  <div class="container-info" style="margin-bottom: 150px">
    <div class="container-details">
      <h2><%= @flat.title %></h2>
      <h6><%= @flat.description%></h6>
      <div class="other-info">
        <p>Address: <%= @flat.address%> </p>
        <p>Capacity: <%= @flat.capacity%> </p>
        </div>
          <%= link_to 'Edit flat', edit_flat_path(@flat), class: 'pull-left btn btn-default width' %>
          <%= link_to flat_path(@flat), method: :delete, data: { confirm: "Delete #{@flat}?" } do %>
          <button  class="pull-left btn btn-default btn-small width"> Delete flat</button>
          <% end %>
        </div>
      </div>
    <div class="container-price">
      <div class="container-price-night">
        <h2> â‚¬ <%= @flat.price %> </h2>
        <p>per night </p>
        <%= simple_form_for [@flat, @booking] do |f| %>
      </div>
        <div class='dates-form'>
          <div>
            <p>START DATE</p>
               <%= f.input :start_date, label: false %>
          </div>
          <div>
            <p>END DATE</p>
              <%= f.input :end_date, label: false %>
          </div>
          <%= f.submit "book", :input_html => { class: "btn btn-primary book" } %>
        </div>
      <% end %>
    </div>
  </div>

 <div class="content">
  <div class="map-container">
    <div
      id="map"
      style="width: 100%;
      height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>


